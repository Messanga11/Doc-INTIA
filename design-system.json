{
  "meta": {
    "name": "Dark UI",
    "version": "1.0.0",
    "description": "Design system reconstruit depuis l’interface fournie. Basé sur un thème sombre premium, arrondi, avec accents pastels et typographie forte."
  },

  "foundations": {
    "colors": {
      "background": {
        "primary": "#0D0D0F",
        "secondary": "#16161A",
        "tertiary": "#1E1E23",
        "card": "#1C1C22"
      },
      "surface": {
        "highlight": "#F3F3F4",
        "elevated": "#2A2A31"
      },
      "accent": {
        "purple": "#C7A4FF",
        "yellow": "#F7FF54",
        "blue": "#4A8CFF",
        "green": "#6CF3C8",
        "red": "#FF6B6B"
      },
      "text": {
        "primary": "#FFFFFF",
        "secondary": "#B4B4BE",
        "muted": "#8A8A93",
        "inverse": "#000000"
      },
      "border": {
        "default": "#2A2A2F",
        "subtle": "#202026"
      }
    },

    "typography": {
      "fontFamily": {
        "main": "Inter, SF Pro, sans-serif"
      },
      "sizes": {
        "xs": 12,
        "sm": 13,
        "md": 15,
        "lg": 18,
        "xl": 22,
        "xxl": 28,
        "display": 34
      },
      "weight": {
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      }
    },

    "radius": {
      "xs": 6,
      "sm": 10,
      "md": 14,
      "lg": 18,
      "xl": 24,
      "pill": 999
    },

    "spacing": {
      "xxs": 4,
      "xs": 8,
      "sm": 12,
      "md": 16,
      "lg": 24,
      "xl": 32,
      "xxl": 48
    },

    "shadows": {
      "soft": "0px 4px 16px rgba(0, 0, 0, 0.25)",
      "medium": "0px 6px 24px rgba(0, 0, 0, 0.3)",
      "hard": "0px 2px 6px rgba(0, 0, 0, 0.5)"
    }
  },

  "components": {
    "sidebar": {
      "width": 260,
      "background": "#16161A",
      "textColor": "#FFFFFF",
      "item": {
        "height": 46,
        "paddingX": 16,
        "paddingY": 12,
        "gap": 12,
        "radius": 12,
        "active": {
          "background": "#1C1C22",
          "color": "#FFFFFF"
        },
        "inactive": {
          "color": "#B4B4BE"
        },
        "iconSize": 20
      }
    },

    "header": {
      "height": 64,
      "background": "#0D0D0F",
      "textColor": "#FFFFFF",
      "controls": {
        "iconSize": 20,
        "color": "#FFFFFF",
        "radius": 12
      }
    },

    "card": {
      "background": "#1C1C22",
      "padding": 20,
      "radius": 18,
      "shadow": "soft",
      "titleSize": "lg",
      "subtitleSize": "sm",
      "contentSpacing": 12
    },

    "ctaButton": {
      "height": 48,
      "radius": 14,
      "paddingX": 20,
      "typography": "medium",
      "variants": {
        "primary": {
          "background": "#4A8CFF",
          "text": "#FFFFFF"
        },
        "secondary": {
          "background": "#2A2A31",
          "text": "#FFFFFF"
        },
        "accentPurple": {
          "background": "#C7A4FF",
          "text": "#000000"
        }
      }
    },

    "input": {
      "height": 48,
      "radius": 14,
      "paddingX": 16,
      "background": "#1E1E23",
      "textColor": "#FFFFFF",
      "placeholderColor": "#8A8A93",
      "border": "1px solid #2A2A2F",
      "iconSize": 20
    },

    "statWidget": {
      "radius": 20,
      "background": "#F7FF54",
      "textColor": "#000000",
      "chart": {
        "lineColorIncome": "#000000",
        "lineColorExpense": "#666666",
        "dotSize": 6,
        "lineWidth": 2
      }
    },

    "profileCard": {
      "radius": 18,
      "avatarSize": 48,
      "background": "#1C1C22",
      "textPrimary": "#FFFFFF",
      "textSecondary": "#B4B4BE"
    },

    "badge": {
      "radius": 10,
      "fontSize": 12,
      "paddingX": 10,
      "paddingY": 4,
      "variants": {
        "purple": {
          "background": "#C7A4FF",
          "textColor": "#000000"
        },
        "blue": {
          "background": "#4A8CFF",
          "textColor": "#FFFFFF"
        }
      }
    }
  },

  "layout": {
    "grid": {
      "columns": 12,
      "gutter": 24,
      "margin": 32
    },
    "sections": {
      "welcomeArea": {
        "height": 80,
        "spacing": 12
      },
      "cardsRow": {
        "gap": 20,
        "cardWidth": "auto"
      },
      "statsRow": {
        "gap": 24
      },
      "sidebarSpacingTop": 32
    }
  }
}
